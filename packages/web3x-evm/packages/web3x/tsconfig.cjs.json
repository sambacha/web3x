{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es6", "es2017.object"],
    "outDir": "dest",
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/mock-*.ts"]
}
